<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <h3><i>Vos informations personnelles</i></h3>
        <p class="lead">
            <b>{{ user.firstname }} {{ user.surname }}</b> <br>
            {{ user.email }} <br>
            {{ user.address }} <br>
            {{ user.phonenumber }} <br>
            {% if user.siteweb %}
                <a href="{{ user.siteweb }}" target="_blank">{{ user.siteweb }}</a>
            {% endif %}
        </p>
    </div>
</div>
