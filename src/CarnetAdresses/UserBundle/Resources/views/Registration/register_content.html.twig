<div class="row">    
    <div class="col-md-6 col-sm-offset-3">
        <div class="well">
            {{ form_start(form, {'method':'POST', 'action':path('fos_user_registration_register') }) }}
            <legend>S'inscrire</legend>
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_errors(form.username) }}
                {{ form_widget(form.username, 
                            {'attr':{'class':'form-control input-lg', 'placeholder':'Pseudo', 'autofocus':'autofocus'} }) }}
            </div>

            <div class="form-group">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, 
                            {'attr':{'class':'form-control input-lg', 'placeholder':'Adresse e-mail'} }) }}
            </div>

            <div class="form-group">
                {{ form_errors(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first, 
                            {'attr':{'class':'form-control input-lg', 'placeholder':'Mot de passe'} }) }}
                {{ form_errors(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second, 
                            {'attr':{'class':'form-control input-lg ', 'placeholder':'Confirmer mot de passe'} }) }}
            </div> <br />

            <div class="row form-group">
                <div class="col-md-6">
                    {{ form_errors(form.firstname) }}
                    {{ form_widget(form.firstname, 
                                {'attr':{'class':'form-control input-lg', 'placeholder':'Prénom'} }) }}
                </div>
                <div class="col-md-6">
                    {{ form_errors(form.surname) }}
                    {{ form_widget(form.surname, 
                                {'attr':{'class':'form-control input-lg', 'placeholder':'Nom de famille'} }) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_errors(form.address) }}
                {{ form_widget(form.address, 
                            {'attr':{'class':'form-control input-lg', 'placeholder':'Adresse postale'} }) }}
            </div>

            <div class="form-group">
                {{ form_errors(form.phonenumber) }}
                {{ form_widget(form.phonenumber, 
                            {'attr':{'class':'form-control input-lg', 'placeholder':'Numéro de téléphone'} }) }}
            </div>

            <p class="text-center">
                <button type="submit" class="btn btn-success btn-lg">Confirmer l'inscription</button>
            </p>
            {{ form_end(form) }}
        </div>
    </div>
</div>
