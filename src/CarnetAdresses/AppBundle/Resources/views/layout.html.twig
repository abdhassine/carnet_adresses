{% extends "::base.html.twig" %}


{% block title %}{{ parent() }}{% endblock %}


{% block body %}
    {# Barre de menu du site, visible lorsque l'on est connecté #}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="{{ path('carnet_app_index') }}" class="navbar-brand">CarnetApp</a>
            </div>
            {% block menubar %}
                {# le contenu de la barre changera en fonction de la page #}
            {% endblock %}
        </div>
    </nav>

    {# Corps de la page #}
    <div class="jumbotron">
        <div class="container">
            <header>
                {% block header %}
                    <h2><b>CarnetApp - mon carnet d'adresses en ligne</b></h2>
                {% endblock %}
            </header>
        </div>
    </div>

    <div class="container">
        {% block content %}{% endblock %}
    </div>
    <hr/>
    <footer class="container">
        <p class="text-right">
            © Brondon UNG 2014-2015
        </p>
    </footer>
{% endblock %}


